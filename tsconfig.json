{
  "compilerOptions": {
    "lib": ["es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "target": "ES2022",
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "docs-website", "dist"]
}
