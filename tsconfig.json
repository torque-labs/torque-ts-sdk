{
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "src/client.ts", "src/auth.ts", "src/audiences.ts"],
}
